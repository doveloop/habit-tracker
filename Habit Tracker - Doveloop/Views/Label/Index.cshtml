@model IEnumerable<Habit_Tracker___Doveloop.Models.ViewModels.LabelViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<head>
    <link rel="stylesheet" type="text/css" href="/css/labelsandhabitspage.css" />
</head>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Label.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Habits)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Label.Name)
            </td>
            <td>
                @{
                    string habitNames = "";
                    foreach (var habit in item.Habits)
                        habitNames += habit.Name + ", ";
                    if (habitNames.Length == 0) habitNames = "No labels";
                    else habitNames = habitNames.Remove(habitNames.Length - 2, 2);
                    @habitNames;
                }
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Label.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Label.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Label.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
