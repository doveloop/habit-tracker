@model IEnumerable<Habit_Tracker___Doveloop.Models.ViewModels.LabelViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Labels List</h1>

<p>
    <a class = "interaction-buttons" asp-action="Create">Create New</a>
</p>
<head>
    <link rel="stylesheet" type="text/css" href="/css/labels.css" />
</head>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Label.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Habits)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
       
@foreach (var item in Model) {
        <tr class="card">
            <td class="label name">
                @Html.DisplayFor(modelItem => item.Label.Name)
            </td>
             
            <td>
                    @foreach (var habit in item.Habits){
                        <div class="habit">
                            @habit.Name
                            </div>
                    }
                    @if(item.Habits.Count==0){
                        <div class="nohabits">No Habits</div>
                    }
                    
                
            </td>
            <td>
                <a class = "interaction-buttons" asp-action="Edit" asp-route-id="@item.Label.Id">Edit</a> |
                    <a class="interaction-buttons" asp-action="Details" asp-route-id="@item.Label.Id">Details</a> |
                    <a class="interaction-buttons" asp-action="Delete" asp-route-id="@item.Label.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
