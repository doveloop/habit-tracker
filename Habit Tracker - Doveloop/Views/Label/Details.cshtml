@model Habit_Tracker___Doveloop.Models.ViewModels.LabelViewModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Label</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Label.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Label.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Habits)
        </dt>
        <dd class = "col-sm-10">
            @{
                string habitNames = "";
                foreach (var habit in Model.Habits)
                    habitNames += habit.Name + ", ";
                if (habitNames.Length == 0) habitNames = "No labels";
                else habitNames = habitNames.Remove(habitNames.Length - 2, 2);
                @habitNames;
            }
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Label.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
