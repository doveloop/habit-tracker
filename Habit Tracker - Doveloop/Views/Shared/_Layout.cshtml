<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Habit Tracker - Doveloop</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/navbar.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Habit_Tracker___Doveloop.styles.css" asp-append-version="true" />
    <script src="~/js/graphs.js" defer></script>
</head>
<body>
    <header>
    
        <!-- Navbar -->
        <nav class="navbar">
            <div class="navbar-inner">
                <ul class="navbar-pages-list">
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Habit" asp-action="Index">
                            <img src="img/task_TEMP.png" alt="Habits" width="30" height="30"/>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Graph" asp-action="Index">
                            <img src="img/graphs_TEMP.png" alt="Graphs" width="30" height="30" />
                        </a>
                    </li>
                </ul>
                <partial name="_LoginPartial" />
            </div>
        </nav>

    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - Habit Tracker - Doveloop - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
