@model Habit_Tracker___Doveloop.Models.HabitLabel


@{
    ViewData["Title"] = "Create";
}
<head>
    <link rel="stylesheet" type="text/css" href="/css/habits.css" />
</head>
<h1 style="color:black;">Create</h1>

<h4>Habit</h4>
<hr />
<div class="row">
    <div class="col-md-4  card">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="User" />
            <input type="hidden" asp-for="Type" value="habit" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
                <label asp-for="Units" class="control-label"></label>
                <input asp-for="Units" class="form-control" />
                <span asp-validation-for="Units" class="text-danger"></span>
            </div>
             @{
                                int count = 0;
                                int tableCols = 3;
                                List<Habit_Tracker___Doveloop.Models.ViewModels.AppliedData> labels = ViewBag.LabelViewModel;

                                foreach (var habit in labels)
                                {
                                    if(count++ % tableCols == 0) {
                                            @:</tr><tr>
                                    }
                                        @:<td class="habit">
                                            <input class="checkbox" type="checkbox"
                                                name="selectedHabits"
                                                value="@habit.Id"
                                                @(Html.Raw(Model.Label.RelationIds.Contains(habit.Id) ? "checked=\"checked\"" : "")) />
                                                @habit.Name
                                        @:</td>
                                }
                                    @:</tr>
                            }
                    }
            <div class="form-group create-button">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
